<div class="col-md-offset-4 col-md-4">
    <div class="form-signin">
        <h3 class="form-signin-heading text-center">Admin Login</h3>
		<%= form_for :login, url: admin_login_path, class: "form-signin" do |f| %>
		<br>
		<%= f.label :account, class: "sr-only" %>
		<%= f.text_field :account, class: "form-control", placeholder: "Account", required: "true", :autofocus => true %>
		<br>
		<%= f.label :password, class: "sr-only" %>
		<%= f.text_field :password, class: "form-control", placeholder: "Password", required: "true", :type => "password" %>
		<br>
		<br>
		<%= f.button "登入" , class: "btn btn-lg btn-success btn-block", type: "submit" %>
		<% end %>
    </div> 
</div>
