<div class="col-md-offset-2 col-md-5">
	<%= form_for @user, :url => admin_users_path, class: "form-horizontal" do |u| %>
		<fieldset>
			<legend>加入會員</legend>
		<div class="form-group">
		<%= u.label :account, class: "sr-only" %>
		<%= u.text_field :account, class: "form-control", placeholder: "Account", required: "true", :autofocus => true %>
		</div>
		
		<div class="form-group">
		<%= u.label :name, class: "sr-only" %>
		<%= u.text_field :name, class: "form-control", placeholder: "Name", required: "true"%>
		</div>
		

		<div class="form-group">
		<%= u.label :password, class: "sr-only"%>
		<%= u.password_field :password, class: "form-control", placeholder: "Password", type: "password", required: "true"%>
		</div>

		<div class="form-group">
		<%= u.label :password_confirmation, class: "sr-only"%>
		<%= u.password_field :password_confirmation, class: "form-control", placeholder: "Enter password again", type: "password", required: "true"%> 
		</div>
		
		<%= u.button "submit" , class: "btn btn-lg btn-primary btn-block", type: "submit" %>

		</fieldset>
	<% end %>
</div>


	
    	