<div class="col-md-offset-2 col-md-10">
	<h3>Admin > 
		<%= link_to "Categories", admin_categories_path %> >
		<%= link_to "#{@admin_category.title}", admin_category_products_path(@admin_category) %> > 
		<%= @product.name %>
		<%= link_to "修改", edit_admin_category_product_path(@admin_category, @product), class: "pull-right btn btn-success" %>
	</h3>
	<br>
	<div class="row">
		<div class="col-md-3">
				<%= image_tag @product.image.url, class: "img-thumbnail" %>
		</div> 
		<div class="col-md-7">
			<div class="panel panel-info">
				<div class="panel-heading">
					<h5>商品名稱</h5>					
				</div>
				<div class="panel-body">
					<h5><%= @product.name %></h5>
				</div>
			</div>

			<div class="panel panel-info">
				<div class="panel-heading">
					<h5>商品售價</h5>					
				</div>
				<div class="panel-body">
					<h5>$<%= @product.price %></h5>
				</div>
			</div>

			<div class="panel panel-info">
				<div class="panel-heading">
					<h5>商品敘述</h5>					
				</div>
				<div class="panel-body">
					<h5><%= @product.description %></h5>
				</div>
			</div>
		</div>
	</div>		
</div>
