<h3>Admin > <%= link_to "Categories", admin_categories_path %> > <%= @admin_category.title %></h3>
<%= link_to '新增類別商品', new_admin_category_product_path(@admin_category), class: "btn btn-success" %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-1">商品編號</th>
      <th class="col-md-1">商品名稱</th>
      <th class="col-md-6">商品敘述</th>
      <th class="col-md-2">商品縮圖</th>
      <th class="col-md-1">修改</th>
      <th class="col-md-1">刪除</th>
    </tr>
  </thead>
  
  <tbody>
  	<% @products.each do |product| %>
	    <tr>
	      <td><%= product.id %></td>
	      <td><%= link_to "#{product.name}", admin_category_product_path(@admin_category, product) %></td>
	      <td><%= product.description %></td>
	      <td><%= image_tag product.image.url(:thumb) %></td>
	      <td><%= link_to "修改", edit_admin_category_product_path(@admin_category, product) %></td>
	      <td><%= link_to "刪除", admin_category_product_path(@admin_category, product), :method => :delete, data: {confirm: "確定要刪除此商品？"} %></td>
	    </tr>
    <% end %>
  </tbody>
</table> 
